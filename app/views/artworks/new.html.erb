<h1>Create New Artwork</h1>

<%= form_with(model: @artwork, local: true) do |form| %>
  <% if @artwork.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artwork.errors.count, "error") %> prohibited this artwork from being saved:</h2>
      <ul>
        <% @artwork.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :artist_name %>
    <%= form.text_field :artist_name %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :medium %>
    <%= form.text_field :medium %>
  </div>

  <div>
    <%= form.label :price_per_month %>
    <%= form.number_field :price_per_month, step: 0.01 %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit "Create Artwork" %>
<% end %>

<%= link_to 'Back to Artworks', artworks_path %>

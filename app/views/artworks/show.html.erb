
<div class="artist-page">
 <div class="background-image" style="<%= "background-image: url(#{url_for(@artwork.image)})" if @artwork.image.attached? %>"></div>
  <div class="content-container">

<div class="avatar-container">
  <div class="avatar-and-info">
    <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= image_tag "https://api.dicebear.com/9.x/pixel-art/svg?seed=#{CGI.escape(current_user.email)}", alt: 'avatar', class: 'avatar-img' %>
    </a>
    <div class="artist-info-show">
      <p class="card-text-show"><%= @artwork.artist_name %></p>
      <%= link_to "View profile", profile_path(artwork_id: @artwork.id), class: "card-text view-profile" %>
    </div>
  </div>
  <div class="favourite">
    <i class="fa-regular fa-heart"></i>
  </div>
</div>


<!-- artwork details -->
  <div class="card h-100">
    <div class="card-body-show">
      <h5 class="card-title-show"><%= @artwork.title %></h5>
      <p class="card-text-show medium">Medium: <%= @artwork.medium.capitalize %></p>
      <p class="card-text-show width">Width: <%= @artwork.width %> cm</p>
      <p class="card-text-show height">Height: <%= @artwork.height %> cm</p>
      <p class="card-text-show price">Price/month: <%= @artwork.price_per_month %> Euros</p>
    </div>

  <!-- carousel -->

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% if @artwork.image.attached? %>
      <div class="carousel-item active">
        <%= image_tag @artwork.image, class: "d-block w-100 card-img-top-show", alt: @artwork.title %>
      </div>
    <% else %>
      <div class="carousel-item active">
        <img class="d-block w-100" src="placeholder_image_path" alt="No image available">
      </div>
    <% end %>

    <!-- add more carousel items here -->
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  </div>
  <%= link_to "Back to artworks", artworks_path, class: "btn btn-warning mt-5" %>
</div>
  </div>
